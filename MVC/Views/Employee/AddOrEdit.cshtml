@model MVC.Models.EmployeeViewModel
@{
    ViewBag.Title = "AddOrEdit";
}

<div class="form-body">
    <fieldset>
        <legend>AddOrEdit</legend>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <div>
                @Html.LabelFor(model => model.EmpName)
                </div>
                <div>
                    @Html.TextBoxFor(model => model.EmpName)
                </div>
                @Html.ValidationMessageFor(model => model.EmpName)
            </div>
            <div class="form-group">
                <div>
                @Html.LabelFor(model => model.Gender)
                </div>
                <div>
                    @Html.EditorFor(model => model.Gender)
                </div>
                @Html.ValidationMessageFor(model => model.Gender)
            </div>
            <div class="form-group">
                <div>@Html.LabelFor(model => model.Salary)</div>
                <div>@Html.EditorFor(model => model.Salary)</div>
                @Html.ValidationMessageFor(model => model.Salary)
            </div>


            <div class="form-group">
                <input type="submit" value="Submit" class="btn button" />
                <input type="reset" value="Reset" class="btn button" />
            </div>
        }
    </fieldset>
</div>


@section scripts{
    @Scripts.Render("~/bundles/jqueryval");

}